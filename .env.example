# Database
DATABASE_PATH=./data/easycook.db

# Admin Authentication
ADMIN_EMAIL=admin@easycook.app
# Generate with: echo -n "your_password" | npx bcrypt-cli
ADMIN_PASSWORD_HASH=$2b$10$...

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here

# Ollama Configuration (optional - for recipe parsing)
# Local development: http://localhost:11434
# Docker: http://ollama:11434 (using service name)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# Optional: Advanced Ollama parameters
# OLLAMA_TIMEOUT=180000          # Timeout in ms (default: 180000 = 3 minutes)
# OLLAMA_MAX_RETRIES=3           # Max retry attempts (default: 3)
# OLLAMA_NUM_PREDICT=2048        # Max tokens to generate (default: 2048)
#                                # ⚠️ IMPORTANT: Certains modèles ont un contexte limité:
#                                #    • Lucie-7B: 2048 tokens max → utilisez 1500
#                                #    • Mistral: 8192 tokens → utilisez 2048-4000
#                                #    • Qwen2.5: 32768 tokens → utilisez 4000-8000
#                                # Si erreur 404 ou crash, réduisez cette valeur !
# OLLAMA_TEMPERATURE=0.1         # Temperature for generation (default: 0.1)

# n8n Webhook (optional - alternative to direct Ollama)
N8N_WEBHOOK_URL=
