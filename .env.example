# Database
DATABASE_PATH=./data/recipes.db

# Admin Authentication
ADMIN_EMAIL=admin@easycook.local
# Generate with: npx bcrypt-cli hash "your-password" 10
ADMIN_PASSWORD_HASH=$2b$10$...

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=change-this-to-a-random-32-char-string

# Ollama Configuration (for recipe parsing)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct-v0.3

# n8n Webhook (optional - for recipe import workflow)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/parse-recipe

# Application
NUXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development
